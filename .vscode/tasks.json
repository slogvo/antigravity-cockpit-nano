{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"problemMatcher": {
				"owner": "esbuild",
				"pattern": [
					{
						"regexp": ".",
						"file": 1,
						"location": 2,
						"message": 3
					}
				],
				"background": {
					"activeOnStart": true,
					"beginsPattern": "node scripts/build.js",
					"endsPattern": "Watching for changes..."
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
